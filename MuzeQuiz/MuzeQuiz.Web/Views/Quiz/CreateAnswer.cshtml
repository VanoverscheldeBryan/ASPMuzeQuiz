@model MuzeQuiz.Models.Answer

@{
    ViewData["Title"] = "CreateAnswer";
}

<h1>CreateAnswer</h1>

<h4>Answer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateAnswer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Answer_Text" class="control-label"></label>
                <input asp-for="Answer_Text" class="form-control" />
                <span asp-validation-for="Answer_Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YesNo" class="control-label"></label>
                <input asp-for="YesNo" class="form-control" />
                <span asp-validation-for="YesNo" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsCorrect" /> @Html.DisplayNameFor(model => model.IsCorrect)
                </label>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="QuestionId" class="control-label"></label>
                <input asp-for="QuestionId" value="@ViewBag.QstId" class="form-control" />
                <span asp-validation-for="QuestionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Answers" asp-route-questionid="@ViewBag.QstId">Back to List</a>
</div>

