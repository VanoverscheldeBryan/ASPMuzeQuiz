@model MuzeQuiz.Models.Question

@{
    ViewData["Title"] = "CreateQuestion";
}

<h1>Create</h1>

<h4>Question</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateQuestion">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="QuestionSelf" class="control-label"></label>
                <input asp-for="QuestionSelf" class="form-control" />
                <span asp-validation-for="QuestionSelf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <div>
                    <select asp-for="Type" asp-items="Html.GetEnumSelectList<Question.QType>()">
                        <option>-- question type --</option>

                    </select>
                </div>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none" hidden>
                <label asp-for="QuizId" class="control-label"></label>
                <input asp-for="QuizId" value="@ViewBag.QuizId" class="form-control" />
                <span asp-validation-for="QuizId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Questions" asp-route-quizid= "@ViewBag.QuizId" >Back to List</a>
</div>

